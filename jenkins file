pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/Manmadha007/Simple-webapp-html-css.git', branch: 'main'
            }
        }
        stage('Deploy') {
            steps {
                sh '''
                mkdir -p ~/simple-web-apps
                cp -r * ~/simple-web-app
                '''
            }
        }
    }
}
